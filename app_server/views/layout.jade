doctype html
html
  head
    title=title
    // Bootstrap CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
    // Custom CSS for background and text color
    link(rel='stylesheet',href='/stylesheets/style.css')

  body
    // Navbar section
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      a.navbar-brand(href='/') My Blog
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/') Home
          li.nav-item
            a.nav-link(href='/about') About
          li.nav-item
            a.nav-link(href='/contact') Contact
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href='/login') Login 
    // Blog cards section
    .container
      h2.my-4 Recent posts
      .row
        each post in blog || []
          .col-md-4.mb-4
            .card
              img.card-img-top(src='/images/#{post.img}', alt='Card image cap',style='height: 300px; object-fit: cover;')
              .card-body
                h5.card-title= post.atitle
                p.card-text= post.desc
                a.btn.btn-primary(href='') Read More &rarr;

    // Bootstrap JS
    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
